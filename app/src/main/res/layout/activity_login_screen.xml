<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bricenangue.timeme.LoginScreenActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageViewloginlogo"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcherclock"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonregisterReg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/buttondelete"
        android:layout_below="@+id/imageViewloginlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_below="@+id/buttonregisterReg"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/emailloggin"
        android:id="@+id/editTextemailloggin"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/separator"
        android:layout_alignLeft="@+id/buttonregisterReg"
        android:layout_alignStart="@+id/buttonregisterReg"
        android:layout_marginBottom="121dp"
        android:layout_alignRight="@+id/buttonregisterReg"
        android:layout_alignEnd="@+id/buttonregisterReg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/passwordlogin"
        android:id="@+id/editTextpasswordloggin"
        android:layout_marginTop="51dp"
        android:layout_alignTop="@+id/editTextemailloggin"
        android:layout_alignLeft="@+id/editTextemailloggin"
        android:layout_alignStart="@+id/editTextemailloggin"
        android:layout_alignRight="@+id/editTextemailloggin"
        android:layout_alignEnd="@+id/editTextemailloggin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonlogin"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/editTextpasswordloggin"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Already have an account?"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView"
        android:layout_above="@+id/editTextemailloggin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
