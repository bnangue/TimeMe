<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/TextView_list_item_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/TextView_list_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Drugstore"

               />
            <TextView
                android:id="@+id/TextView_list_item_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Rewe"
                android:paddingLeft="3dp"
                />

            <TextView
                android:id="@+id/TextView_list_item_price_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="2,35€"
                android:paddingLeft="3dp"
                android:paddingBottom="3dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageButton_remove_one_item_from_list"
                android:src="@drawable/remove_item_small"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <TextView
                android:id="@+id/TextView_list_item_number_of_item_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="2" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageButton_add_one_item_to_list"
                android:src="@drawable/add_item_small"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>


        <TextView
            android:id="@+id/TextView_list_item_total_item_price"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="4,67€"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>


</RelativeLayout>

