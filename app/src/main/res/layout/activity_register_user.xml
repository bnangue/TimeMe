<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinateLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bricenangue.timeme.RegisterUserActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewloginlogo"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcherclock"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="@string/emailloggin"
            android:id="@+id/editTextregemail"
            android:layout_below="@+id/imageViewloginlogo"
            android:layout_marginTop="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextregpassword"
            android:hint="@string/passwordlogin"
            android:layout_below="@+id/editTextregemail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextregemail"
            android:layout_alignEnd="@+id/editTextregemail" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerbtn"
            android:id="@+id/buttonregisterReg"
            style="@style/buttondelete"
            android:layout_marginTop="80dp"
            android:onClick="Onregisterclicked"
            android:layout_below="@+id/editTextregpassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextregconfirmpassword"
            android:layout_alignEnd="@+id/editTextregconfirmpassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="or sign in"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textViewgotologgin"
            android:layout_marginBottom="37dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="OngotoLogginclicked"
            android:layout_toRightOf="@+id/imageViewloginlogo"
            android:layout_toEndOf="@+id/imageViewloginlogo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Confirm Password"
            android:id="@+id/editTextregconfirmpassword"
            android:layout_below="@+id/editTextregpassword"
            android:layout_alignRight="@+id/editTextregpassword"
            android:layout_alignEnd="@+id/editTextregpassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
