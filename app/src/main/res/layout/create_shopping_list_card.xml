<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/lin_create_shopping_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_create_shopping_list_card"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="5dp"
            >



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/re_create_shopping_list_card"
                >

                <TextView
                    android:id="@+id/TextView_listname_create_shopping_list_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/title"
                    android:layout_alignParentTop="true"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/textView_LisStatus_create_shopping_list_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/title"
                    android:layout_above="@+id/buttonsharecardview_create_shopping_list_card"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView_Listcreator_create_shopping_list_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eventDescription"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonsharecardview_create_shopping_list_card"
                    android:drawableRight="@drawable/share_small"
                    android:textColor="@color/primary"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/buttondeletecardview_create_shopping_list_card"
                    android:layout_toStartOf="@+id/buttondeletecardview_create_shopping_list_card"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttondeletecardview_create_shopping_list_card"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/primary_dark"
                    android:drawableRight="@drawable/delete_small"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_alignTop="@+id/buttonsharecardview_create_shopping_list_card" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>