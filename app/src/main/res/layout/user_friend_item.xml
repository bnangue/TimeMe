<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border="true"
        app:civ_border_width="0dp"
        app:civ_border_color="#ffff"
        android:id="@+id/avatarfriend_user_friend_item"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernamefriend_user_friend_item"
        android:textColor="#000"
        android:text=" "
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/avatarfriend_user_friend_item"
        android:layout_toEndOf="@+id/avatarfriend_user_friend_item"
        android:layout_alignTop="@+id/avatarfriend_user_friend_item"/>

    <ImageButton
        android:id="@+id/checkerImageView_user_friend_item"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/unchecked"
        android:scaleType="fitCenter"
        style="@style/check"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>