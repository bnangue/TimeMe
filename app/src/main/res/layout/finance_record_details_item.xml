<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/TextView_finance_recored_details_item_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TextView_finance_recored_details_item_record_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="20-10-2016"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_finance_recored_details_item_record_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="4,67â‚¬"
                android:textStyle="bold"
                android:layout_gravity="end"
                />


            <TextView
                android:id="@+id/TextView_finance_recored_details_item_record_amount_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey_light"
                android:layout_gravity="end"
                android:visibility="gone"
                />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>

