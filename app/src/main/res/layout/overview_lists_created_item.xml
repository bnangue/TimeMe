<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/TextView_list_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Grocery list from 20-07-17"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TextView_list_creator_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:text="by : brice nangue" android:layout_marginTop="20dp"/>

        </LinearLayout>




        <TextView
            android:id="@+id/TextView_list_status_item"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="not done"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>


</RelativeLayout>

