<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bricenangue.timeme.CreateFinanceRecordsActivity">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/activity_Create_Finance_Records_radioGroup_expenditure_income"
        android:layout_alignParentTop="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton_activity_Create_Finance_Records_Account_expenditure"
            android:layout_marginBottom="10dp"
            android:text="@string/text_radiobtn_activity_Create_Finance_Records_expenditure"
            android:layout_weight="1"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton_activity_Create_Finance_Records_Account_income"
            android:text="@string/text_radiobtn_activity_Create_Finance_Records_income"
            android:layout_weight="1"/>
    </RadioGroup>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_activity_Create_Finance_Record_record_name"
        android:layout_below="@+id/activity_Create_Finance_Records_radioGroup_expenditure_income"
        android:layout_marginBottom="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:hint="@string/textInitialize_create_records"
                android:id="@+id/editText_activity__Create_Finance_Record_name"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/secondlinearelaoutadditemtolist_Create_Finance_Record"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout_activity_Create_Finance_Record_record_name"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Text_Booking_Date_Create_Finance_Record"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="22-07-2016"
            android:id="@+id/button_booking_activity_Create_Finance_Record"
            android:gravity="center"
            android:drawableLeft="@drawable/tearcalendar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="2"/>

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_activity_add_item_to_list__Create_Finance_Record"
        android:layout_below="@+id/secondlinearelaoutadditemtolist_Create_Finance_Record"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/activity_Create_Finance_Record_text_category"
            android:layout_weight="1"

            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_activity_Create_Finance_Record"
            android:background="@drawable/round"
            android:layout_weight="2"
            />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Create_Account_AccountBalance_layout"
        android:layout_below="@+id/linearLayout_activity_add_item_to_list__Create_Finance_Record"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/textInitialize_record_amount"
            android:id="@+id/editText_Create_Finance_Records_Amount"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Create_Account_AccountBalance_layout_note"
        android:layout_below="@+id/editText_Create_Account_AccountBalance_layout"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="@string/textInitialize_record_note"
            android:id="@+id/editText_Create_Finance_Records_note"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_activity_Create_Finance_Records_use_Account"
        android:text="@string/text_activity_Create_Finance_Records_use_Account"
        android:layout_below="@+id/editText_Create_Account_AccountBalance_layout_note"
        android:layout_marginBottom="15dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_Create_Finance_Records_radioGroup"
        android:layout_below="@+id/textView_activity_Create_Finance_Records_use_Account" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton_activity_Create_Finance_Records_Account1"
            android:layout_marginBottom="10dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton_activity_Create_Finance_Records_Account2"/>
    </RadioGroup>

</RelativeLayout>
