<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinateLayout__creatList_add_item_to_list"
    tools:context="com.app.bricenangue.timeme.AddItemToListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_above="@+id/linearLayout_separator_activity_details_shopping_list">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/button_create_item_set_date_layout"
                android:layout_marginTop="5dp"
               >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateaddeventstart_creatList_add_item_to_list"
                    android:textSize="15sp"
                    android:drawableLeft="@mipmap/ic_calendar_customized"
                    android:drawableStart="@mipmap/ic_calendar_customized"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>


                <Button
                    android:id="@+id/grocery_activity_add_itemtoList_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:drawableLeft="@mipmap/ic_add_custom"
                    android:drawableStart="@mipmap/ic_add_custom"
                    android:text="@string/text_add_item_to_list_createnewItem_button"
                    android:textColor="@color/create_new_ShoppingList"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/secondlinearelaoutadditemtolist"
                android:orientation="horizontal"
                android:layout_below="@+id/button_create_item_set_date_layout"
                >



                <android.support.v7.widget.SearchView
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/actionbarsearch_add_item_to_list"
                    android:layout_gravity="right"
                    />

            </LinearLayout>




            <LinearLayout
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:id="@+id/linearLayout_activity_add_item_to_list"
                android:layout_below="@+id/secondlinearelaoutadditemtolist"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_add_itme_to_list_DataBase_empty"
                    android:layout_gravity="bottom"
                    android:layout_weight="3"
                    android:id="@+id/textView_add_item_to_list_List_empty"

                    />
                <Switch
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/button_switch_activity_add_item_to_list"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_sort_activity_add_item_to_list"
                    android:layout_gravity="bottom"
                    android:layout_weight="2"
                    android:text="@string/activity_details_shopping_list_text_sort_by"
                    android:textAllCaps="false"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:drawableRight="@mipmap/ic_sort_items"
                    android:drawableEnd="@mipmap/ic_sort_items"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="horizontal"
                android:background="@color/primary"
                android:id="@+id/linearLayout_separator_activity_details_shopping_list1"
                android:layout_below="@+id/linearLayout_activity_add_item_to_list"/>


            <ListView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/shoppinglistViewaddItemToListactivity"
                android:layout_below="@+id/linearLayout_separator_activity_details_shopping_list1"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:id="@+id/linearLayout_separator_activity_details_shopping_list"
            android:layout_above="@+id/relative_add_Item_to_list_activity"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/relative_add_Item_to_list_activity"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grocery_add_item_to_list_to_pay_text"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/grocery_fragment_balance_amount_activity_add_item_to_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/null_item_total_price"
                    android:gravity="end"
                    android:layout_weight="8"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
