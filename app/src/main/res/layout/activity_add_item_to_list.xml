<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bricenangue.timeme.AddItemToListActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_above="@+id/linearLayout_separator_activity_details_shopping_list">
        <Button
            android:id="@+id/grocery_activity_add_itemtoList_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:drawableRight="@drawable/addprevisory"
            android:layout_marginTop="5dp"
            android:text="@string/text_add_item_to_list_createnewItem_button"
            android:textSize="15sp"
            android:textColor="@color/create_new_ShoppingList"/>

        <android.support.v7.widget.SearchView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionbarsearch_add_item_to_list"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/grocery_activity_add_itemtoList_button"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add_itme_to_list_DataBase_empty"
            android:layout_below="@+id/actionbarsearch_add_item_to_list"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView_add_item_to_list_List_empty"

            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/shoppinglistViewaddItemToListactivity"
            android:layout_below="@+id/textView_add_item_to_list_List_empty"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:id="@+id/linearLayout_separator_activity_details_shopping_list"
        android:layout_above="@+id/relative_add_Item_to_list_activity"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relative_add_Item_to_list_activity"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grocery_add_item_to_list_to_pay_text"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/grocery_fragment_balance_amount_activity_add_item_to_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/null_item_total_price"
                android:gravity="end"
                android:layout_weight="8"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
