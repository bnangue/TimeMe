<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.bricenangue.timeme.DetailsFinanceAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_activity_details_shopping_list_detail_fiannce_account"
        android:paddingRight="6dp"
        android:paddingLeft="6dp">
        <TextView
            android:id="@+id/textView_grocery_list_item_title_activity_details_shopping_detail_fiannce_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gaccount_title_text_detail_fiannce_account"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:clickable="true"
            />
        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/actionbarsearch_add_item_to_list_detail_fiannce_account"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/primary"
        android:id="@+id/linearLayout_separator_activity_details_shopping_list1_detail_fiannce_account"
        android:layout_below="@+id/linearLayout_activity_details_shopping_list_detail_fiannce_account"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_activity_details_shoppping_list_detail_fiannce_account"
        android:layout_below="@+id/linearLayout_separator_activity_details_shopping_list1_detail_fiannce_account"
        android:layout_above="@+id/linearLayout_separator_activity_grocery_list_detail_fiannce_account"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/primary_light"
        android:id="@+id/linearLayout_separator_activity_grocery_list_detail_fiannce_account"
        android:layout_above="@+id/relative_fragment_grocery2_detail_fiannce_account"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relative_fragment_grocery2_detail_fiannce_account"
        android:background="@color/primary_dark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grocery_fragment_balance"
                android:layout_weight="1"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/finance_fragment_balance_amount_detail_fiannce_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/null_item_total_price"
                android:textColor="@color/white"
                android:layout_weight="8"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
