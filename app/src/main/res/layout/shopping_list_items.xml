<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
           >

            <TextView
                android:id="@+id/TextView_list_item_title_itemcreate_shopping_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TextView_list_item_price_itemcreate_shopping_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="2,35€" android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/TextView_list_item_number_of_item_selectedcreate_shopping_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="2" />

        </LinearLayout>


        <TextView
            android:id="@+id/TextView_list_item_total_item_pricecreate_shopping_list"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="4,67€"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:layout_weight="3"
            android:id="@+id/checkerImageViewcreate_shopping_list"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/unchecked"
            android:scaleType="fitCenter"
            style="@style/check"/>
    </LinearLayout>


</RelativeLayout>

